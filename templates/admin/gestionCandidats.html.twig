{% extends 'base.html.twig' %}

{% block body %}
<section>
    <h1>Liste des Candidats</h1>
    {% for candidat in candidats %}
    <div class="card" style="width: 18rem;">
        <img src="{{ candidat.photo }}" class="card-img-top" alt="Photo de {{ candidat.nom }}">
        <div class="card-body">
            <h5 class="card-title">{{ candidat.prenom}} {{candidat.nom }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">
                {% if candidat.enRecherche %}
                    ✔ En recherche
                {% else %}
                    ❌ Ne recherche pas actuellement
                {% endif %}
            </h6>
            <p class="card-text">👶 {{ candidat.age }} ans</p>
            <p class="card-text">🚩 {{ candidat.ville.nom }} </p>
        </div>
        <div class="card-body">
            <a href="#" class="card-link">Voir profil</a>
        </div>
    </div>
    {% endfor %}
    </section>
    <a href="{{ path('admin_backOffice') }}" class="btn btn-secondary">Retour</a>
{% endblock %}

{% block title %}

{% endblock %}

